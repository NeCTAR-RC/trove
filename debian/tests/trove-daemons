#!/bin/bash
#---------------------
# Testing trove-daemons
#---------------------
set -e
DAEMONS=('trove-api' 'trove-taskmanager' 'trove-conductor') 

for daemon in "${DAEMONS[@]}"; do
    systemctl stop $daemon
done

ret=0

mysql -u root << EOF
DROP DATABASE IF EXISTS trove;
CREATE DATABASE trove;
GRANT ALL PRIVILEGES ON trove.* TO 'trove'@'localhost' \
  IDENTIFIED BY 'changeme';
GRANT ALL PRIVILEGES ON trove.* TO 'trove'@'%' \
  IDENTIFIED BY 'changeme';
EOF

crudini --set /etc/trove/trove.conf database connection "mysql://trove:changeme@localhost/trove"
crudini --set /etc/trove/trove-conductor.conf database connection "mysql://trove:changeme@localhost/trove"
crudini --set /etc/trove/trove-taskmanager.conf database connection "mysql://trove:changeme@localhost/trove"
crudini --set /etc/trove/trove-taskmanager.conf DEFAULT exists_notification_transformer ""

su -s /bin/sh -c 'trove-manage db_sync' trove > /dev/null 2>&1

for daemon in "${DAEMONS[@]}"; do
    systemctl start $daemon
    TIMEOUT=50
    while [ "$TIMEOUT" -gt 0 ]; do
        if systemctl is-active $daemon > /dev/null; then
            echo "OK"
            break
        fi
        TIMEOUT=$((TIMEOUT - 1))
        sleep 0.1
    done

    if [ "$TIMEOUT" -le 0 ]; then
        echo "ERROR: ${daemon} IS NOT RUNNING"
        ret=1
    fi
done

exit $ret
